
@model CreateBannerDto

@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    @* TABLE *@
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Yeni Banner Girişi</h4>
                                    <p class="card-subtitle mb-4">
                                        Banner alanına veri girişini aşağıdaki panelden yapabilirsiniz. Tasarımda bozulma olmaması için yeni bir banner girişi yaptıktan sonra, önceki banner kaydını silmeyi unutmayınız. Bu panelde sadece 1 adet veri kaydı olmalıdır.
                                    </p>
                                    <form method="post">
                                        <div class="form-group">
                                            <label for="exampleInputTitle">Başlık</label>
                                            <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlığı giriniz">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputDescription">Açıklama</label>
                                            <input type="text" class="form-control" id="exampleInputDescription" asp-for="Decription" placeholder="Açıklamayı giriniz">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputVideoDescripton">Video Açıklama</label>
                                            <input type="text" class="form-control" id="exampleInputVideoDescripton" asp-for="VideoDescripton" placeholder="Video açıklamasını giriniz">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputVideoUrl">Video URL</label>
                                            <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Videoya ait Youtube embed linkini giriniz">
                                        </div>
                                        <button type="submit" class="btn btn-primary waves-effect waves-light">Banner bilgisini Kaydet</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

