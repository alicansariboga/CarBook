@model List<ResultContactDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Gelen Mesaj Sayfası</h4>
                                    <p class="card-subtitle mb-4">
                                        Ana Sayfa üzerinden kullanıcıların iletişim kısmı aracılığıyla gönderdikleri mesajların listesinin bulunduğu sayfadır. İlgili satırın üzerine tıklayıp mesajın detayını görebilirsiniz.
                                    </p>

                                    <table id="basic-datatable" class="table dt-responsive nowrap">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Gönderen</th>
                                                <th>Konu</th>
                                                <th>E-Mail</th>
                                                <th>Tarih</th>
                                                <th>Mesaj</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach(var item in Model)
                                            {
                                                count++;
                                                <tr>
                                                    <td>@count</td>
                                                    <td>@item.Name</td>
                                                    <td>@item.Subject</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.SendDate.ToShortDateString()</td>
                                                    <td>@item.Message</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



