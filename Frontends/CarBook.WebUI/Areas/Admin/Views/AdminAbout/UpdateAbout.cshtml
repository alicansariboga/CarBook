@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Yeni Hakkımızda Girişi</h4>
                                    <p class="card-subtitle mb-4">
                                        Hakkımızda ile ilgili bilgileri aşağıdaki kutucuğa girebilirsiniz. Güncellemeden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.
                                    </p>
                                    <form method="post">
                                        <input type="hidden" asp-for="aboutID" />
                                        <div class="form-group">
                                            <label for="exampleInputTitle">Başlık</label>
                                            <input type="text" class="form-control" id="exampleInputTitle" asp-for="title" placeholder="Başlığı giriniz">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputDecription">Açıklama</label>
                                            <textarea rows="5" class="form-control" id="exampleInputDecription" asp-for="decription" placeholder="Açıklamayı giriniz."></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputImageUrl">Görsel URL</label>
                                            <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="imageUrl" placeholder="Görsele ait linkini giriniz">
                                        </div>
                                        <button type="submit" class="btn btn-primary waves-effect waves-light">Hakkımızda bilgisini güncelle</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





