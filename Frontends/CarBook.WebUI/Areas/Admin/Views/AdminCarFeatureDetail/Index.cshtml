@model List<ResultCarFeatureByCarIdDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Araca Ait Özellikler Listesi</h4>
                                    <p class="card-subtitle mb-4">
                                        Araca ait özellik eklemesi yapabilir, mevcut özellikleri kaldırabilir ve ilgili güncellemeleri gerçekleştirebilirsiniz.
                                    </p>
                                    @if(Model.Count != 0)
                                    {
                                    <form method="post">
                                            @for (int i = 0; i < Model.Count; i++)
                                            {
                                                <div class="form-check">
                                                    <input type="hidden" asp-for="@Model[i].CarFeatureID" />
                                                    <input type="hidden" asp-for="@Model[i].FeatureName" />
                                                    <input type="checkbox" asp-for="@Model[i].Available" class="form-check-input" />
                                                    <label class="form-check-label" for="@Model[i].Available">@Model[i].FeatureName</label>
                                                </div>
                                            }
                                            <button class="btn btn-success">Değişiklikleri Kaydet</button>
                                            
                                        </form>
                                    }
                                    else
                                    {
                                        <form>
                                            <div class="mt-3">
                                                <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                                                    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                                                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                                    </symbol>
                                                    <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
                                                        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                                                    </symbol>
                                                </svg>

                                                <div class="alert alert-danger d-flex align-items-center" role="alert">
                                                    <svg class="bi flex-shrink-0 me-3" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                                                    <div>
                                                        Bu araç için herhangi bir özellik tanımlanmamıştır.
                                                    </div>
                                                </div>
                                                <div class="alert alert-success d-flex align-items-center" role="alert">
                                                    <svg class="bi flex-shrink-0 me-3" width="24" height="24" role="img" aria-label="Info:"><use xlink:href="#info-fill" /></svg>
                                                    <div>
                                                        Araca ait özellik eklemesi yapabilmek için lütfen aşağıdaki butona tıklayınız ve ilgili ekrandan işlemlerinize devam ediniz.
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-end">
                                                <a href="/Admin/AdminCarFeatureDetail/CreateFeatureByCarID" class="btn btn-success">Özellik Ata</a>
                                            </div>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

