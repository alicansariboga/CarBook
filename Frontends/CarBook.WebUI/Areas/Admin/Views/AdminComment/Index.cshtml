@model List<ResultCommentDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Yorum Listesi - Blog ID: @ViewBag.ci</h4>
                                    <p class="card-subtitle mb-4">
                                        Bloglarla ilgili o bloğa yapılmış olan yorum listenini bu sayfadan görüntüleyebilirsiniz. İlgili yorumları kaldırabilir veya tekrardan aktif hale getirebilirsiniz. Bunun için, yorumların altında yer alan butonları kullanabilirsiniz.
                                    </p>
                                    <div>
                                        @foreach(var item in Model)
                                        {
                                            count++;
                                            <div class="col-md-10">
                                                <div class="card">
                                                    <h5 class="card-header">Yorum @count</h5>
                                                    <div class="card-body">
                                                        <h4 class="card-title">@item.Name</h4>
                                                        <p class="card-text">
                                                            @item.Description
                                                        </p>
                                                        <p style="text-align:right">Gönderilme Tarihi: @item.CreatedDate.ToShortDateString()</p>
                                                        <a href="#" class="btn btn-primary waves-effect waves-light">Yorumu Kaldır</a>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (ViewBag.ValueControl == 0)
                                        {
                                            <div class="mt-3">
                                                <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                                                    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                                                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                                    </symbol>
                                                </svg>

                                                <div class="alert alert-danger d-flex align-items-center" role="alert">
                                                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                                                    <div>
                                                        Herhangi bir banner bulunamadı. Lütfen veri girişi yapınız.
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





