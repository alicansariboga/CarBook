@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Araç Özelliği Güncelleme Sayfası</h4>
                                    <p class="card-subtitle mb-4">
                                        Araç ile ilgili özellikleri aşağıdaki kutucuğa girebilirsiniz. Güncellemeden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.
                                    </p>
                                    <form method="post">
                                        <div class="form-group">
                                            <input type="hidden" asp-for="FeatureID"/>
                                            <label for="exampleInputName">Özellik Adı</label>
                                            <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Özellik adı girişi yapınız">
                                        </div>
                                        <button type="submit" class="btn btn-primary waves-effect waves-light">Özelliği Kaydet</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

