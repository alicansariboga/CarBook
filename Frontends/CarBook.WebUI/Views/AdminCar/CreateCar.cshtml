@model CreateCarDto
@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    @* TABLE *@
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Yeni Araç Girişi</h4>
                                    <p class="card-subtitle mb-4">
                                        Araç ile ilgili temel bilgileri eksizsiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.
                                    </p>
                                    <form method="post">
                                        <div class="form-group">
                                            <label for="exampleInputBrand">Marka</label>
                                            @* DropDown *@
                                            @Html.DropDownListFor(x => x.BrandID,(List<SelectListItem>)ViewBag.BrandValues,new {@class="form-control"})
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputModel">Model</label>
                                            <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model girişi yapınız">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputCoverImg">Kapak Fotoğrafı</label>
                                            <input type="text" class="form-control" id="exampleInputCoverImg" asp-for="CoverImageUrl" placeholder="Kapak fotoğraf linkini giriniz">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputKm">KM</label>
                                            <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Kilometre bilgisini giriniz">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputTransmission">Vites Türü</label>
                                            <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder="Vites türünü giriniz">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputSeat">Koltuk Sayısı</label>
                                            <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Koltuk sayısını seçiniz">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputLuggage">Bagaj Sayısı</label>
                                            <input type="text" class="form-control" id="exampleInputLuggage" asp-for="Luggage" placeholder="Bagaj sayısını giriniz">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputFuel">Yakıt Türü</label>
                                            <input type="text" class="form-control" id="exampleInputFuel" asp-for="Fuel" placeholder="Yakıt türünü giriniz">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputBigImg">Büyük Kapak Fotoğrafı</label>
                                            <input type="text" class="form-control" id="exampleInputBigImg" asp-for="BigImageUrl" placeholder="Araç Detayı için görünecek Kapak fotoğraf linki">
                                        </div>
                                        <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

