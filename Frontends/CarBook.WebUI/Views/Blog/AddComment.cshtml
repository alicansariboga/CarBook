
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir Yorum Yapın</h3>
    <form method="post" asp-action="AddComment" asp-controller="Blog" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Adınız ve Soyadınız</label>
            <input type="text" name="Name" class="form-control" id="name">
        </div>
        <input type="hidden" value="@ViewBag.blogid" name="BlogID">
        <div class="form-group">
            <label for="email">Email Adresiniz</label>
            <input type="email" name="Email" class="form-control" id="email">
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea name="Description" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <input id="btnOK" type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        $('#btnOK').click(function () {
            swal({
                title: "Başarılı!",
                text: "Yorumunuz Başarılı bir şekilde gönderildi.",
                icon: "success",
                button: false, //"Tamam",
            });
            setTimeout(function () {
                swal.close();
            }, 3000); // 3 second
        });
    });
</script>